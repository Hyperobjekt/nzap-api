{
  "name": "nzap-api",
  "version": "1.0.0",
  "description": "The API to serve scenarios data",
  "main": "index.js",
  "scripts": {
    "start": "node .",
    "dev": "./start",
    "test": "mocha --timeout 10000 ./test/**/*.spec.js --exit",
    "auth": "gcloud auth login",
    "deploy": "gcloud config set project net-zero-america && gcloud app deploy --quiet --verbosity=info",
    "data:mk_json": "node --max-old-space-size=8192 _scripts/mk_json _data/nzap_data.csv",
    "predata:mk_json": "rimraf ./_data/nzap_data.json ./_data/nzap_data.js ./_data/nzap_filters.json",
    "postdata:mk_json": "npm run data:mk_filters",
    "data:mk_filters": "node _scripts/mk_filters _data/nzap_data.json",
    "postdata:mk_filters": "npm run data:mk_loadable",
    "data:mk_loadable": "node _scripts/mk_loadable",
    "postdata:mk_loadable": "npm run db:clean",
    "db:clean": "./_scripts/_clean",
    "postdb:clean": "npm run db:prefill",
    "db:prefill": "./_scripts/_prefill"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/urimaxi/nzap-api.git"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "json2csv": "^5.0.5",
    "jsonwebtoken": "^8.5.1",
    "moment-timezone": "^0.5.31",
    "mongodb": "^3.6.2",
    "path": "^0.12.7",
    "pg": "^8.4.2",
    "pluralize": "^8.0.0",
    "q": "^1.5.1",
    "serve-favicon": "^2.5.0",
    "slug": "^4.0.1"
  },
  "author": "Uri Maxima for HyperObjekt",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/urimaxi/nzap-api/issues"
  },
  "homepage": "https://github.com/urimaxi/nzap-api#readme",
  "devDependencies": {
    "chai": "^4.2.0",
    "dreamjs": "^0.2.0",
    "mocha": "^8.2.1",
    "neat-csv": "^6.0.1",
    "node-mocks-http": "^1.9.0",
    "nodemon": "^2.0.6",
    "rimraf": "^3.0.2",
    "supertest": "^6.0.1"
  }
}